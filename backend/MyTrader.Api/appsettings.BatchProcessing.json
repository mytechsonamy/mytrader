{
  "BatchProcessing": {
    "StockScrapperDataPath": "/path/to/Stock_Scrapper/DATA",
    "GlobalSettings": {
      "MaxConcurrentJobs": 8,
      "DefaultBatchSize": 1000,
      "GlobalSlaTarget": "02:00:00",
      "EnableDuplicateCleanup": true,
      "JobRetentionDays": 30
    },
    "MarketConfigurations": {
      "BIST": {
        "BatchSize": 800,
        "MaxConcurrency": 3,
        "SlaTarget": "00:45:00",
        "ExpectedRecordsPerSecond": 800,
        "Priority": "High",
        "EnableDuplicateCleanup": true
      },
      "Crypto": {
        "BatchSize": 1500,
        "MaxConcurrency": 4,
        "SlaTarget": "00:20:00",
        "ExpectedRecordsPerSecond": 1500,
        "Priority": "High",
        "EnableDuplicateCleanup": true
      },
      "NASDAQ": {
        "BatchSize": 1500,
        "MaxConcurrency": 4,
        "SlaTarget": "00:25:00",
        "ExpectedRecordsPerSecond": 1500,
        "Priority": "Normal",
        "EnableDuplicateCleanup": true
      },
      "NYSE": {
        "BatchSize": 1500,
        "MaxConcurrency": 4,
        "SlaTarget": "00:25:00",
        "ExpectedRecordsPerSecond": 1500,
        "Priority": "Normal",
        "EnableDuplicateCleanup": true
      }
    },
    "SlaMonitoring": {
      "CheckInterval": "00:05:00",
      "MonitoringWindow": "01:00:00",
      "CriticalComplianceThreshold": 80.0,
      "MinProcessingRate": 500,
      "MaxErrorRate": 10.0,
      "MaxCpuUsage": 80.0,
      "MaxMemoryUsageGB": 8,
      "AlertingEnabled": true
    },
    "RetryPolicy": {
      "MaxRetries": 3,
      "InitialDelayMinutes": 1,
      "MaxDelayMinutes": 30,
      "BackoffMultiplier": 2.0,
      "EnableJitter": true
    },
    "ScheduledJobs": {
      "DailyImport": {
        "Enabled": false,
        "CronExpression": "0 2 * * *",
        "TimeZone": "UTC",
        "RunAllMarkets": true,
        "ParallelExecution": true
      },
      "WeeklyCleanup": {
        "Enabled": false,
        "CronExpression": "0 3 * * 0",
        "TimeZone": "UTC",
        "CleanupDuplicates": true,
        "ArchiveOldJobs": true
      }
    }
  },
  "Hangfire": {
    "Dashboard": {
      "Enabled": true,
      "Path": "/hangfire",
      "Title": "MyTrader Batch Processing Dashboard",
      "StatsPollingIntervalMs": 2000,
      "RequireAuthentication": false
    },
    "Server": {
      "WorkerCount": null,
      "Queues": [ "critical", "high", "default", "low", "background" ],
      "ServerCheckIntervalMinutes": 1,
      "HeartbeatIntervalSeconds": 30,
      "ServerTimeoutMinutes": 5,
      "SchedulePollingIntervalSeconds": 15
    },
    "Storage": {
      "QueuePollIntervalSeconds": 15,
      "JobExpirationCheckIntervalHours": 1,
      "CountersAggregateIntervalMinutes": 5,
      "PrepareSchemaIfNecessary": true,
      "DashboardJobListLimit": 50000,
      "TransactionTimeoutMinutes": 1,
      "InvisibilityTimeoutMinutes": 30
    }
  }
}