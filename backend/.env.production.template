# MyTrader Production Environment Variables Template
# Copy this file to .env.production and fill in actual values

# ========================================
# CORE CONFIGURATION
# ========================================

# Domain and URLs
DOMAIN=yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://admin.yourdomain.com

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database
POSTGRES_DB=mytrader
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here

# Full connection string (used by API)
DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=mytrader;Username=postgres;Password=your_secure_database_password_here

# ========================================
# REDIS CONFIGURATION
# ========================================

REDIS_PASSWORD=your_secure_redis_password_here
REDIS_CONNECTION_STRING=redis:6379,password=your_secure_redis_password_here

# ========================================
# JWT AUTHENTICATION
# ========================================

# Generate secure random keys for production
JWT_ISSUER=MyTrader
JWT_AUDIENCE=MyTrader-API
JWT_SECRET_KEY=your_256_bit_secret_key_here_must_be_very_long_and_secure

# ========================================
# EXTERNAL API KEYS
# ========================================

# Binance API (for market data)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# ========================================
# NOTIFICATION SERVICES
# ========================================

# Firebase (Push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_firebase_sender_id

# SendGrid (Email service)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com

# ========================================
# LOGGING AND MONITORING
# ========================================

# Seq Logging Server
SEQ_SERVER_URL=http://seq:5341
SEQ_ADMIN_PASSWORD_HASH=your_seq_admin_password_hash

# Application Insights (Optional)
APP_INSIGHTS_KEY=your_application_insights_key

# ========================================
# MONITORING DASHBOARDS
# ========================================

# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# ========================================
# SECURITY & SSL
# ========================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================================
# DEPLOYMENT SETTINGS
# ========================================

# Docker image tag
IMAGE_TAG=latest

# Resource limits (can be adjusted based on server capacity)
API_MEMORY_LIMIT=2G
API_CPU_LIMIT=1.0
DB_MEMORY_LIMIT=1G
DB_CPU_LIMIT=0.5

# ========================================
# BACKUP CONFIGURATION
# ========================================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# S3 backup settings (if using cloud backup)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=mytrader-backups
S3_REGION=us-east-1

# ========================================
# ADDITIONAL SECURITY
# ========================================

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_AUTH_REQUESTS_PER_MINUTE=10

# API Keys for external integrations
EXTERNAL_API_KEY=your_external_api_key

# ========================================
# DEVELOPMENT/STAGING OVERRIDES
# ========================================
# These can be overridden in staging environments

# ASPNETCORE_ENVIRONMENT=Staging
# POSTGRES_DB=mytrader_staging
# DOMAIN=staging.yourdomain.com