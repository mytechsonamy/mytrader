{
  "name": "mytrader-workspace",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "precommit": "run-p precommit:*",
    "precommit:hooks": "./scripts/check-infinite-renders.sh",
    "precommit:db": "./scripts/check-db-connections.sh",
    "precommit:env": "./scripts/validate-env-config.sh",
    "lint:hooks": "eslint --rule 'react-hooks/exhaustive-deps: error' --rule 'react-hooks/rules-of-hooks: error' frontend/mobile/src",
    "quality-gate": "run-s precommit:*",
    "install:mobile": "cd frontend/mobile && npm install",
    "start:mobile": "cd frontend/mobile && npm start",
    "build:backend": "cd backend && dotnet build",
    "test:integration": "./scripts/integration-test.sh"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
