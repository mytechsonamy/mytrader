{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/signalr": "^9.0.6",
    "@tanstack/react-query": "^5.17.15",
    "@tanstack/react-query-devtools": "^5.17.15",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^6.21.1",
    "react-hook-form": "^7.48.2",
    "zustand": "^4.4.7",
    "axios": "^1.12.2",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0",
    "class-variance-authority": "^0.7.0",
    "lucide-react": "^0.307.0",
    "framer-motion": "^10.18.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.0",
    "jsdom": "^23.0.1",
    "@playwright/test": "^1.40.0",
    "axe-core": "^4.8.0",
    "@axe-core/playwright": "^4.8.0",
    "msw": "^2.0.0",
    "@types/ws": "^8.5.0",
    "ws": "^8.14.0",
    "nock": "^13.4.0",
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "vitest run --grep '@smoke'",
    "test:critical": "vitest run --grep 'authentication|price|trading|navigation'",
    "test:websocket": "vitest run --grep 'websocket'",
    "test:integration": "cross-env NODE_ENV=test vitest run --config vite.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "playwright:install": "playwright install",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "deps:check": "npm outdated",
    "deps:update": "npm update"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
